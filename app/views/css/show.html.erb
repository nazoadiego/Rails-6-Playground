<h3>
  <%= link_to "Go Back", css_index_path %>
</h3>

<div class="mt-12">


  <h1>
    <%= @css.name %>

  </h1>

  <%= case @css.id
    when 1
      render "css/grid/first"
    when 2
      render "css/flexbox/flexbox_grid.html.erb"
    when 3
      render "css/flexbox/second_flexbox_grid.html.erb"
    else
      "<p class='mt-2'>Create the render!</p>".html_safe
    end
  %>

</div>
