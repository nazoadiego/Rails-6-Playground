<h3 class="ml-8 pt-8">
  <%= link_to "Go Back", csses_path %>
</h3>

<div class="mt-12">


  <h1 class="ml-8">
    <%= @css.name %>
  </h1>

  <%= case @css.id
    when 1
      render "csses/grid/css_grid"
    when 2
      render "csses/flexbox/flexbox_grid"
    when 3
      render "csses/flexbox/second_flexbox_grid"
    when 4
      render "csses/flexbox/flexbox_navbar"
    else
      "<p class='mt-2'>Create the render!</p>".html_safe
    end
  %>

</div>
